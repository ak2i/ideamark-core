{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Entitlement-core",
  "type": "object",
  "$defs": {
    "DecisionContext": {
      "type": "object",
      "properties": {
        "time": {
          "type": "string",
          "format": "date-time"
        },
        "ip": {
          "type": "string"
        },
        "userAgent": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        },
        "extra": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "DecisionRequest": {
      "type": "object",
      "properties": {
        "principal": {
          "$ref": "#/$defs/Principal"
        },
        "resource": {
          "$ref": "#/$defs/Resource"
        },
        "action": {
          "type": "string",
          "description": "(enum_ref: vocabulary.action_vocab)"
        },
        "context": {
          "$ref": "#/$defs/DecisionContext"
        }
      },
      "required": [
        "principal",
        "resource",
        "action"
      ]
    },
    "DecisionResponse": {
      "type": "object",
      "properties": {
        "allow": {
          "type": "boolean"
        },
        "reason": {
          "type": "string"
        },
        "debug": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "allow"
      ]
    },
    "Principal": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "(example: user:123)"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attrs": {
          "type": "object",
          "additionalProperties": true
        },
        "claims": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "id"
      ]
    },
    "Resource": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "(example: feature:pro_reports)"
        },
        "kind": {
          "type": "string",
          "enum": [
            "feature",
            "document",
            "project"
          ]
        },
        "attrs": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "id",
        "kind"
      ]
    },
    "Entitlement": {
      "type": "object",
      "properties": {
        "subjectId": {
          "type": "string"
        },
        "resourceId": {
          "type": "string"
        },
        "relation": {
          "type": "string",
          "description": "(enum_ref: vocabulary.relation_vocab)"
        },
        "issuedAt": {
          "type": "string",
          "format": "date-time"
        },
        "expiresAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "meta": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "subjectId",
        "resourceId",
        "relation"
      ]
    }
  }
}